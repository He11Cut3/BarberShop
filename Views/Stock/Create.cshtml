@model BarberStock

<section class="contact-section padding">
    <div class="contact-wrap d-flex align-items-center row">
        <div class="col-lg-6 sm-padding">
            <div class="contact-form">
                <form asp-controller="Stock" asp-action="Create" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    
                    <div class="form-group">
                        <label asp-for="BarberStockName">Наименование</label>
                        <input asp-for="BarberStockName" class="form-control" />
                        <span asp-validation-for="BarberStockName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BarberStockDescription">Описание</label>
                        <textarea asp-for="BarberStockDescription" class="form-control"></textarea>
                        <span asp-validation-for="BarberStockDescription" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Фотография поста</label>
                        <div class="input-group">
                            <input type="file" asp-for="FormFile" class="form-control" required />
                        </div>
                    </div>
                    <button type="submit" class="default_btn">Создать</button>
                </form>
            </div>
        </div>
    </div>
</section>

<script src="https://cdn.ckeditor.com/4.19.0/standard/ckeditor.js"></script>
<script>

    CKEDITOR.replace('BarberStockDescription');
</script>
